<main class="min-h-screen bg-gray-50 py-12 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <%= link_to 'â† Back to articles', all_articles_path, class: 'text-sm text-indigo-600 hover:underline font-medium' %>
    </div>

    <article class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <% if @article.cover_image.attached? %>
      <%= image_tag url_for(@article.cover_image), class: "rounded-lg shadow-md mb-6" %>
      <% else %>
      <span>No image</span>
      <% end %>

      <div class="p-8 md:p-12">
        <!-- Status Badge -->
        <div class="mb-4">
          <% if @article.status == 'published' %>
          <span class="inline-block bg-green-100 text-green-800 text-xs font-semibold px-3 py-1 rounded-full">Published</span>
          <% else %>
          <span class="inline-block bg-gray-100 text-gray-800 text-xs font-semibold px-3 py-1 rounded-full">Draft</span>
          <% end %>
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-6"><%= @article.title %></h1>

        <!-- Metadata -->
        <div class="flex flex-wrap items-center gap-6 text-sm text-gray-600 mb-8 pb-6 border-b border-gray-200">
          <div>
            <span class="text-gray-500">Created</span><br>
            <span class="font-medium"><%= @article.created_at.strftime('%b %d, %Y') %></span>
          </div>
          <% if @article.status == 'published' && @article.published_at.present? %>
          <div>
            <span class="text-gray-500">Published</span><br>
            <span class="font-medium text-green-600"><%= @article.published_at.strftime('%b %d, %Y') %></span>
          </div>
          <% end %>
          <div class="ml-auto">
            <span class="text-gray-500">Views</span><br>
            <span class="font-medium"><%= @article.views_count || 0 %></span>
          </div>
        </div>

        <!-- Description -->
        <div class="prose prose-lg max-w-none text-gray-800 mb-10">
          <%= simple_format(@article.description) %>
        </div>

        <!-- Actions: Publish/Edit/Delete -->
        <div class="flex flex-wrap items-center gap-3 pt-6 border-t border-gray-200">

          <% if @article.status == 'draft' %>
          <%= form_with url: publish_article_path(@article), method: :post, local: true do |f| %>
          <button type="submit" class="px-6 py-2 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition">
            Publish
          </button>
          <% end %>
          <% end %>

          <%= link_to 'Edit', edit_article_path(@article), class: 'px-6 py-2 bg-yellow-500 text-white font-semibold rounded-lg hover:bg-yellow-600 transition' %>
          <%= button_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'px-6 py-2 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition' %>
        </div>

      </div>
    </article>
  </div>
</main>
<header class="bg-gradient-to-r from-gray-900 to-gray-800 text-white py-16 md:py-24 mb-12" style="background: linear-gradient(90deg, #111827 0%, #1f2937 100%); color: #fff;">
  <div class="max-w-7xl mx-auto px-6 text-center">
    <h1 class="text-4xl md:text-6xl font-extrabold">Get in Touch</h1>
    <p class="mt-4 max-w-2xl mx-auto text-lg md:text-xl text-gray-200">Have questions or want to collaborate? We'd love to hear from you.</p>
  </div>
</header>

<main class="max-w-7xl mx-auto px-6 py-16">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
    <!-- Contact Form -->
    <div>
      <h2 class="text-2xl font-bold mb-6">Send us a message</h2>
      <form class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Name</label>
          <input type="text" placeholder="Your name" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
          <input type="email" placeholder="your@email.com" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Subject</label>
          <input type="text" placeholder="What is this about?" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Message</label>
          <textarea rows="5" placeholder="Your message here..." class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent"></textarea>
        </div>
        <button type="submit" class="w-full bg-indigo-600 text-white font-bold py-3 rounded-lg hover:bg-indigo-700 transition">Send Message</button>
      </form>
    </div>

    <!-- Contact Info -->
    <div class="mt-12 md:mt-0" style="margin-top:2rem; margin-left:1.5rem;">
      <h2 class="text-2xl font-bold mb-6">Other ways to reach us</h2>
      
      <!-- Email -->
      <div class="mb-8 p-6 bg-gray-50 rounded-lg">
        <h3 class="font-bold text-lg mb-2">Email</h3>
        <p class="text-gray-700">rails@blog.com</p>
        <p class="text-sm text-gray-600 mt-2">We typically respond within 24 hours</p>
      </div>

      <!-- Phone -->
      <div class="mb-8 p-6 bg-gray-50 rounded-lg">
        <h3 class="font-bold text-lg mb-2">Phone</h3>
        <p class="text-gray-700">+1 (555) 123-4567</p>
        <p class="text-sm text-gray-600 mt-2">Monday - Friday, 9am - 5pm EST</p>
      </div>

      <!-- Social -->
      <div class="p-6 bg-gray-50 rounded-lg">
        <h3 class="font-bold text-lg mb-4">Follow us</h3>
        <div class="flex gap-4">
          <a href="#" aria-label="Facebook" title="Facebook" class="rounded-full hover:opacity-90" style="background:#1877F2; width:40px; height:40px; display:inline-flex; align-items:center; justify-content:center;">

<!-- header moved to layout -->

<main class="flex-1 bg-gray-50">
  <!-- Hero Section -->
  <section class="relative bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e?auto=format&fit=crop&w=1600&q=60')">
    <div class="bg-black/50">
      <div class="max-w-7xl mx-auto px-6 py-28 text-center">
        <h2 class="text-5xl md:text-6xl font-extrabold text-white drop-shadow-lg">Stories, Ideas & Tutorials</h2>
        <p class="mt-4 text-lg md:text-xl text-gray-100 max-w-2xl mx-auto">Thoughtful articles on technology, lifestyle, and productivity — written to inspire and help you build better things.</p>
        <div class="mt-8 flex justify-center gap-4">
          <a href="#featured" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-md font-semibold shadow">Explore</a>
          <%= link_to "About", about_path, class: "bg-white/90 hover:bg-white text-indigo-700 px-6 py-3 rounded-md font-semibold shadow" %>
        </div>
      </div>
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-6 py-16">
    <!-- Featured Section -->
    <section id="featured" class="mb-16 mt-5">
      <h3 class="text-3xl font-bold mb-10">Latest Articles</h3>
      <% if @articles.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% @articles.each do |article| %>
            <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition flex flex-col">
              <div class="h-48 bg-gray-200 overflow-hidden">
                <% if article.respond_to?(:image) && article.image.attached? %>
                  <%= image_tag article.image, alt: article.title, class: "w-full h-full object-cover" %>
                <% elsif article.cover_image.present? %>
                  <img src="<%= article.cover_image %>" alt="<%= article.title %>" class="w-full h-full object-cover">
                <% else %>
                  <img src="https://source.unsplash.com/400x300/?blog,tech" alt="article" class="w-full h-full object-cover">
                <% end %>
              </div>
              <div class="p-6 flex flex-col flex-1">
                <div class="text-sm text-gray-500 mb-2"><%= article.published_at ? article.published_at.strftime("%b %d, %Y") : "Draft" %> • <span class="font-medium">By Admin</span></div>
                <h4 class="text-xl font-semibold mb-3"><%= article.title %></h4>
                <p class="text-gray-700 mb-4 flex-1"><%= truncate(article.description, length: 120) %></p>
                <a href="#" class="text-indigo-600 font-semibold hover:underline">Read more →</a>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-600 text-center py-8">No articles yet. Check back soon!</p>
      <% end %>
    </section>

    <!-- CTA Section -->
    <section style="background: linear-gradient(to right, #4f46e5, #9333ea); margin-top: 80px;" class="rounded-lg p-8 md:p-12 text-center text-white">
      <h3 class="text-3xl font-bold mb-4">Ready to Get Started?</h3>
      <p class="text-lg mb-6 max-w-2xl mx-auto">Join our community of builders and learners. Subscribe for updates and exclusive content.</p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <input type="email" placeholder="Enter your email" class="px-4 py-3 rounded-md text-gray-900 flex-1 max-w-xs" />
        <button class="bg-white text-indigo-600 font-semibold px-6 py-3 rounded-md hover:bg-gray-100">Subscribe</button>
      </div>
    </section>
  </div>
</main>

